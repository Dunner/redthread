
#dialogue-editor
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  user-select none
  cursor: move; /* fallback if grab cursor is unsupported */
  cursor: grab;
  cursor: -moz-grab;
  cursor: -webkit-grab;
  &:active
    cursor grabbing
    cursor -moz-grabbing
    cursor -webkit-grabbing
  *
    user-select none

  #viewport
    background-image linear-gradient(#222 1pt,transparent 0px),
                     linear-gradient(90deg,#222 1pt,transparent 0px)
    background-size 240px 240px
    background-color #222;
    width 4000px
    height 4000px
    position absolute
    top 0
    left 0
  & #viewport
    transition all 2s ease-in-out
    *
      opacity 0
      transition opacity 0.3s ease-in-out
.editing #dialogue-editor #viewport
    background-color #181818
    transition background-color 2s ease-in-out
    *
      opacity 1
      transition opacity 2s ease-in-out


.dedit-tbox
  font-size 12px
  color #eee
  position absolute
  width 200px
  min-height 70px
  background #111
  border 1px solid #333
  & .top
    border-bottom 1px solid #333
    height 20px
    & .profilecircle
      position absolute
      left 0px
      top -10px
      height 120%
      width 30px
    & .increment
      position absolute
      right 5px
      top 0px
      font-size 16px
      line-height 20px
  & .middle
    padding 5px
    min-height 30px
  & .choice
    border-top 1px solid #333
    & .alternative
        min-height 20px
        padding-left 5px
        width calc( 100% - 50px )
        float left
        overflow none
    & .go-to
        border-left 1px solid #333
        width 50px
        float left
        min-height 20px
        line-height 20px
        padding-left 5px
        overflow none
        &:after
          content ''
          display block
          position absolute
          top 0
          left 100%
          width 5px
          height 100%
          background brown
        .port-out
          width 100%
          color black
          height 1px
          width 1px
          left calc( 100% + 3px )
          top 50%
          position absolute
          .line
            position absolute
            transform-origin 0 0
            left 0px
            right 0px
            height 2px
            background-color rgba(255,105,180,0.3)
            
  &:after
    content ''
    display block
    position absolute
    top 0
    right 100%
    width 5px
    height 100%
    background green